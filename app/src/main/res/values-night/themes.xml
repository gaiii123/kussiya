<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application dark theme. -->
    <style name="Base.Theme.Kussiya.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color (Strawberry red theme). -->
        <item name="colorPrimary">@color/Screen</item>
        <item name="colorPrimaryVariant">@color/notification_card_color</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color (Teal retained). -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and surface colors for dark theme (mostly black with subtle red highlights). -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar color (Strawberry red variant). -->
        <item name="android:statusBarColor">@color/notification_card_color</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Main dark theme -->
    <style name="Theme.Kussiya.Dark" parent="Base.Theme.Kussiya.Dark" />
</resources>
