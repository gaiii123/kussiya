<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kussiya" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color (Strawberry red theme). -->
        <item name="colorPrimary">@color/Screen</item>
        <item name="colorPrimaryVariant">@color/notification_card_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Teal retained). -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surface colors for light theme (mostly white and black). -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar color (Strawberry red variant). -->
        <item name="android:statusBarColor">@color/notification_card_color</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Main application theme -->
    <style name="Theme.Kussiya" parent="Base.Theme.Kussiya" />
</resources>
